<project name="TraceAgent" basedir="." default="help">
  <target name="help">
    <java classname="org.apache.tools.ant.Main">
      <arg value="-projecthelp" />
    </java>
  </target>

  <target name="clean" description="Comile classes">
    <delete dir="./antbin" />
    <delete dir="./built" />
    <delete dir="./reports" />
    <delete dir="./testbin" />
  </target>

  <target name="build" description="Comile classes">
    <delete dir="./antbin" />
    <mkdir dir="./antbin" />

    <javac destdir="./antbin" debug="true" source="1.6" target="1.6">
      <src path="./src"/>
      <classpath>
        <fileset dir="./lib" includes="*.jar" />
      </classpath>
    </javac>
  </target>

  <target name="test" description="Run Tests" depends="build" >
    <delete dir="./testbin" />
    <mkdir dir="./testbin" />

    <javac destdir="./testbin" debug="true" source="1.6" target="1.6">
      <src path="./testsrc"/>
      <classpath>
        <pathelement path="./antbin" />
        <fileset dir="./lib" includes="*.jar" />
      </classpath>
    </javac>

  <mkdir dir="./reports" />
  <mkdir dir="./reports/junit" />

  <junit printsummary="yes" haltonfailure="no">
    <jvmarg value="-javaagent:built/traceagent_test.jar"/>

    <classpath>
    <pathelement location="./testbin"/>
      <pathelement path="./antbin" />
      <fileset dir="./lib" includes="*.jar" />
    </classpath>

    <formatter type="xml"/>
    <formatter type="plain"/>

    <batchtest fork="yes" todir="./reports/junit">
    <fileset dir="./testsrc">
      <include name="**/*Test.java"/>
    </fileset>
    </batchtest>
  </junit>

  <junitreport todir="./reports/junit">
    <fileset dir="./reports/junit">
    <include name="TEST-*.xml"/>
    </fileset>
    <report format="frames" todir="./reports/junit/html"/>
  </junitreport>
  </target>
  <target name="jar" description="Create Jars" depends="build, test" >

    <delete dir="./lib/libclasses" />
    <mkdir dir="./lib/libclasses" />
    <unzip src="./lib/asm-3.2.jar" dest="./lib/libclasses">
      <patternset>
        <include name="**/*.class" />
        <exclude name="META-INF" />
      </patternset>
    </unzip>
    <unzip src="./lib/asm-commons-3.2.jar" dest="./lib/libclasses">
      <patternset>
        <include name="**/*.class" />
        <exclude name="META-INF" />
      </patternset>
    </unzip>
    <unzip src="./lib/asm-util-3.2.jar" dest="./lib/libclasses">
      <patternset>
        <include name="**/*.class" />
        <exclude name="META-INF" />
      </patternset>
    </unzip>

    <mkdir dir="./built/" />

    <!-- Trace Agent -->
    <jar destfile="./built/traceagent.jar" compress="false" manifest="conf/META-INF/MANIFEST.MF">
      <fileset dir="./antbin" includes="**/agent/**/*.class" />
      <fileset dir="./antbin" includes="**/output/**/*.class" />
      <fileset dir="./antbin" includes="**/shared/*.class" />
      <fileset dir="./lib/libclasses" includes="**/*.class" />
    </jar>

    <!-- Test Trace Agent -->
    <jar destfile="./built/traceagent_test.jar" compress="false" manifest="conf/META-INF/MANIFEST.MF">
    </jar>

    <!-- CUI Trace Client -->
    <jar destfile="./built/cuitraceclient.jar" compress="false">
      <manifest>
        <attribute name="Main-Class" value="org.intrace.client.cui.TraceClient" />
        <attribute name="Class-Path" value="." />
      </manifest>
      <fileset dir="./antbin" includes="**/shared/*.class" />
      <fileset dir="./antbin" includes="**/client/cui/TraceClient.class" />
    </jar>

    <!-- GUI Trace Client -->
    <jar destfile="./built/guitraceclient.jar" filesetmanifest="mergewithoutmain">
      <manifest>
        <attribute name="Main-Class" value="org.intrace.client.gui.TraceClient" />
        <attribute name="Class-Path" value="." />
      </manifest>
      <fileset dir="./antbin" includes="**/shared/*.class" />
      <fileset dir="./antbin" includes="**/client/gui/**/*.class" />
      <zipfileset excludes="META-INF/*.SF" src="lib/org.eclipse.swt.win32.win32.x86_3.5.2.v3557f.jar" />
    </jar>

    <delete dir="./lib/libclasses" includes="**/*" />
  </target>

  <target name="deploy" description="Copy agent jar to another project" depends="build, test, jar" >
    <copy file="./built/traceagent.jar" tofile="../org.intrace.test/lib/traceagent.jar" overwrite="true" />
  </target>
</project>
